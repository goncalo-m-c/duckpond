# Server Configuration
DUCKPOND_HOST=0.0.0.0
DUCKPOND_PORT=8000
DUCKPOND_WORKERS=4

# Metadata Database
# SQLite (development)
METADATA_DB_URL=sqlite:///.~/.duckpond/metadata.db
# PostgreSQL (production)
# METADATA_DB_URL=postgresql+asyncpg://user:pass@localhost:5432/duckpond

# Storage Configuration
DEFAULT_STORAGE_BACKEND=local
LOCAL_STORAGE_PATH=~/.duckpond
# S3_BUCKET=duckpond-data
# S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# Catalog
CATALOG_ENABLED=true

# Tenant Defaults
DEFAULT_MAX_STORAGE_GB=100
DEFAULT_MAX_QUERY_MEMORY_GB=4
DEFAULT_MAX_CONCURRENT_QUERIES=10
API_KEY_CACHE_TTL_SECONDS=30

# Upload Configuration
MAX_FILE_SIZE_MB=1000
TEMP_UPLOAD_DIR=/tmp/duckpond/uploads

# Streaming Configuration
STREAM_BUFFER_SIZE=100000
STREAM_FLUSH_INTERVAL_SECONDS=60

# WAL Configuration
WAL_ENABLED=false
WAL_SYNC_MODE=fdatasync
WAL_DIRECTORY=~/.duckpond/wal

# DuckDB Configuration
DUCKDB_MEMORY_LIMIT=4GB
DUCKDB_THREADS=4
DUCKDB_POOL_SIZE=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
